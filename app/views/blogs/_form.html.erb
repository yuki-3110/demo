<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="field">
    <%= form.label :standard_deadline %>
    <%= form.select :standard_deadline, Blog.standard_deadlines.keys.map {|k| [t("enums.blog.standard_deadline.#{k}"), k]}, include_blank: '選択してください', class: 'form-control'  %>
  </div>

  <br>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control mb-4' %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control mb-4' %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline, class: 'form-control mb-4' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-block btn-primary btn-sm mt-4' %>
  </div>
<% end %>
